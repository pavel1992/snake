{
    "compilerOptions": {

        "outDir": "./dist/",
        "noImplicitAny": false,
        "sourceMap": true,
        "module": "es6",
        "target": "es6",
        "jsx": "react",

        "allowJs": true,
        "moduleResolution" : "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "baseUrl" : "../../typings",
        "lib": [
            "es5",
            "es6",
            "es7",
            "dom",
            "scripthost",
            "es2015.core",
            "es2015.collection",
            "es2015.generator",
            "es2015.iterable",
            "es2015.promise",
            "es2015.proxy",
            "es2015.reflect",
            "es2015.symbol",
            "es2015.symbol.wellknown"
        ]

    },

    "exclude": [
        "./node_modules/**/*"
    ],
    "awesomeTypescriptLoaderOptions": {
        "silent": false,
        "transpileOnly": true
    }
}
